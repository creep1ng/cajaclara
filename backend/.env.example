# ===========================================
# Configuraci√≥n de Entorno - Backend CajaClara
# ===========================================

# Application
APP_NAME=CajaClara API
APP_VERSION=1.0.0-mvp
DEBUG=false
ENVIRONMENT=development

# MVP Settings
MVP_MODE=true
DEFAULT_USER_ID=00000000-0000-0000-0000-000000000001
DEFAULT_USER_EMAIL=demo@cajaclara.com
DEFAULT_USER_PASSWORD=demo123

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cajaclara
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://172.24.0.3:3000

# OpenAI - OCR
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=30

# OCR Settings
OCR_MIN_CONFIDENCE=0.7
OCR_MAX_IMAGE_SIZE_MB=10
OCR_ALLOWED_FORMATS=image/jpeg,image/png,image/jpg,image/webp

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cajaclara.com

# Storage (opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=cajaclara-uploads

# Monitoring (opcional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PORT=9090

# Cache (opcional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Rate Limiting (opcional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_OCR=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true
ENABLE_EXPORT=true